{
  "custom-ui-style.external.imports": [
    "file://${userHome}/.config/Code/User/custom.js"
  ],
  "custom-ui-style.font.monospace": "'UDEV Gothic NLFG'",
  "custom-ui-style.font.sansSerif": "'IBM Plex Sans Condensed'",
  "custom-ui-style.stylesheet": {
    ".sidebar .content": {
      "font-size": "16px !important"
    },
    ".sidebar .monaco-list": {
      "zoom": "1.0"
    }
  },
  "custom-ui-style.webview.enable": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.experimental.useTrueInlineView": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.renderSideBySide": false,
  "editor.codeLensFontFamily": "\"IBM Plex Sans Condensed\"",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.fontFamily": "\"UDEV Gothic NFLG\", Cica, Consolas, monospace",
  "editor.fontSize": 14,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.fontFamily": "\"IBM Plex Sans Condensed\"",
  "editor.linkedEditing": true,
  "editor.minimap.maxColumn": 80,
  "editor.renderLineHighlight": "all",
  "editor.rulers": [
    80,
    120
  ],
  "editor.smoothScrolling": true,
  "editor.wordSegmenterLocales": "ja",
  "emacs-mcx.cursorMoveOnFindWidget": true,
  "emacs-mcx.emacsLikeTab": true,
  "emacs-mcx.enableDigitArgument": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.supportUntrustedWorkspaces": {
    "tuttieee.emacs-mcx": {
      "supported": true
    }
  },
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "git.allowForcePush": true,
  "git.blame.editorDecoration.enabled": false,
  "git.closeDiffOnOperation": true,
  "git.confirmSync": false,
  "git.enableCommitSigning": true,
  "git.fetchOnPull": true,
  "git.openRepositoryInParentFolders": "never",
  "git.pruneOnFetch": true,
  "git.rebaseWhenSync": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commit message format. Written in English."
    }
  ],
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.localeOverride": "ja",
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.enable": {
    "markdown": true,
    "scminput": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  "githubPullRequests.experimental.notificationsView": true,
  "json.format.keepLines": true,
  "mise.configureExtensionsAutomatically": false,
  "mise.configureExtensionsUseSymLinks": true,
  "redhat.telemetry.enabled": false,
  "remote.SSH.remotePlatform": {
    "*.gitpod.local": "linux",
    "*.gitpod.remote": "linux",
    "0195a1a8-e9e9-7173-acf4-e8a84938d3dc.gitpod.remote": "linux",
    "0195cf70-e035-7a4a-b3e5-824b657cc1c4.gitpod.remote": "linux",
    "0195cf84-289e-7c8c-a1e3-a1be94b56059.gitpod.remote": "linux",
    "0195cf91-37bf-7c96-a055-1c6c7ba1db91.gitpod.remote": "linux",
    "0195fa11-7f9c-7ce7-b7e5-5289fd1cff70.gitpod.remote": "linux",
    "019612fd-8014-79b3-af70-13c958650713.gitpod.remote": "linux",
    "0196134d-63a8-74a3-8c8d-e1c244411526.gitpod.remote": "linux",
    "01961384-f871-73c9-9ecc-7beea4d4e413.gitpod.remote": "linux",
    "01961e49-fb7c-7664-aa08-2bf83c6c4b79.gitpod.remote": "linux",
    "01963cea-cf33-7211-a3a4-0f28f7297d68.gitpod.remote": "linux"
  },
  "scm.alwaysShowRepositories": true,
  "scm.defaultViewMode": "tree",
  "scm.inputFontFamily": "editor",
  "search.showLineNumbers": true,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.automationProfile.windows": {
    "args": [
      "-NoLogo",
      "-NoProfile"
    ],
    "path": "pwsh.exe"
  },
  "terminal.integrated.defaultProfile.windows": "Nu",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "icon": "terminal-bash",
      "path": "bash"
    },
    "nu": {
      "path": "nu"
    },
    "zsh": {
      "path": "zsh"
    }
  },
  "terminal.integrated.profiles.windows": {
    "Nu": {
      "path": "nu.exe"
    }
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.sendKeybindingsToShell": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.showTabs": "single",
  "workbench.list.smoothScrolling": true,
  "workbench.view.alwaysShowHeaderActions": true,
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  }
}
